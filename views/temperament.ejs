<!DOCTYPE html>
<html>

<head>
  <title> DAB - Adopt Animal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/styles.css">
  <script src="../js/common.js"></script>

</head>

<body>
  <%- include('./partials/navbar.ejs', {username: username, roleid: roleid}) %>
    <div class="container-fluid pt-5 mt-5">
      <h2 class="p-3 text-center">Animals for Adoption - Temperament</h2>
        <div class="list-group">
          <div class="row px-3 py-1 w-100">
            <span class="col py-1 bg-noroff text-center">Id</span>
            <span class="col py-1 bg-noroff text-center">Name</span>
            <span class="col py-1 bg-noroff text-center">Options</span>
          </div>
          <% temperament.forEach(function(temp) { %>
            <div class="row px-3 py-1 w-100">
              <span class="col py-1 bg-light text-center">
                <%=temp.TemperamentId%>
              </span>
              <span class="col py-1 bg-light text-center">
                <%=temp.Temperament%>
              </span>
              <span class="col py-1 bg-light text-center">
                <button class="btn-sm btn-warning" onclick="updateTemperament(<%=temp.TemperamentId%>)">Update temperament</button>
                <button class="btn-sm btn-danger" onclick="deleteTemperament(<%=temp.TemperamentId%>)">Delete temperament</button>
              </span>
            </div>
            <% }); %>
              <hr>
            <div class="row">
              <div class="col-4"></div>
              <div class="col-4 text-center mt-2">
                  <button class="btn btn-success" id="btn-add-animal" onclick="addTemperament()">Add New Temperament</button>
              </div>
              <div class="col-4"></div>
            </div>
      </div>
    </div>
</body>

</html>